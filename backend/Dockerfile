# ğŸ§± Base image
FROM python:3.11-slim

# ğŸ‘¤ Set work directory inside the container
WORKDIR /app

# ğŸ§° Install system dependencies (for psycopg2 and others)
RUN apt-get update && apt-get install -y \
    gcc \
    libpq-dev \
    && rm -rf /var/lib/apt/lists/*

# ğŸ§¾ Copy requirements and install
COPY requirements.txt .

RUN pip install --no-cache-dir -r requirements.txt

# ğŸ“ Copy rest of the backend code
COPY . .

# ğŸŒ Expose port (Render expects your app to listen on 10000)
EXPOSE 10000

# ğŸš€ Command to start FastAPI
CMD ["uvicorn", "app:app", "--host", "0.0.0.0", "--port", "10000"]
